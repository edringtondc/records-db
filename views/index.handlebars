    <!-- HEADER + SEARCH BAR -->
    <div class="row">
        <div id="docviewer">
            <div>
                <div>
                    <h2 id="tableTitle">Records Library</h2>
                </div>

               <!-- TABLE -->
                <table id="dataTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                            <th>Age</th>
                            <th>Start date</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each documents}}
                        <tr>
                            <td>{{this.source}}</td>
                            <td>{{this.document_name}}</td>
                            <td>{{this.docdate}}</td>
                            <td>{{this.category}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.image}}</td>
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>